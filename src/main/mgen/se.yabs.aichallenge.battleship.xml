<Module>
	<Enums>

		<Team>
			<RED />
			<BLUE />
			<OBSERVERS />
		</Team>

		<GamePhase>
			<JOINING />
			<PLACING_SHIPS />
			<PLAYING />
			<GAME_OVER />
		</GamePhase>

	</Enums>
	<Types>

		<!-- ********** STATE ********** -->
		<Ship>
			<points type="list[Segment]">[]</points>
		</Ship>
		<Segment>
			<alive type="bool">true</alive>
			<pos type="Vec2" />
		</Segment>
		<Player>
			<name type="string" />
			<team type="Team" />
			<shotsFired type="list[Shot]">[]</shotsFired>
			<shotsReceived type="list[Shot]">[]</shotsReceived>
			<ships type="list[Ship]">[]</ships>
		</Player>
		<GameState>
			<redPlayer type="Player" />
			<bluePlayer type="Player" />
			<observers type="list[Player]">[]</observers>
			<phase type="GamePhase" />
			<currentTeam type="Team" />
		</GameState>
		<Vec2>
			<x type="int32">0</x>
			<y type="int32">0</y>
		</Vec2>
		<Shot>
			<pos type="Vec2">{}</pos>
			<isHit type="bool">false</isHit>
		</Shot>


		<!-- ********** MESSAGES ********** -->

		<BattleshipMessage extends="se.yabs.aichallenge.GameMessage" />
		<RequestFromServer extends="BattleshipMessage" />

		<PlaceShipsRequest extends="RequestFromServer" />
		<PlaceShips extends="BattleshipMessage">
			<ships type="List[Ship]">[]</ships>
		</PlaceShips>

		<MakeShotRequest extends="RequestFromServer" />
		<MakeShot extends="BattleshipMessage">
			<shot type="Shot" />
		</MakeShot>

		<ShotResult extends="BattleshipMessage">
			<shooterName type="String" />
			<shot type="Shot" />
		</ShotResult>

		<GameOver extends="BattleshipMessage">
			<reason type="String" />
			<winner type="String" />
			<loser type="String" />
			<board type="GameState" />
		</GameOver>

	</Types>
</Module>